{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "dfdemo712"
		},
		"inputBlob_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'inputBlob'"
		},
		"sqloutput_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'sqloutput'"
		},
		"sqloutput_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "azuresqlserver712.database.windows.net"
		},
		"sqloutput_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "azure-db-demo"
		},
		"sqloutput_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "azuresqlserveradmin"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/blobtosql')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "blobtosql",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							},
							"sink": {
								"type": "AzureSqlSink",
								"writeBehavior": "insert",
								"sqlWriterUseTableLock": false
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "FlaversCSV",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "SqlTable",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/FlaversCSV')]",
				"[concat(variables('factoryId'), '/datasets/SqlTable')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/FlaversCSV')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "inputBlob",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "Flavors.csv",
						"container": "private"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "Flavor",
						"type": "String"
					},
					{
						"name": "Base Flavor",
						"type": "String"
					},
					{
						"name": "Liked",
						"type": "String"
					},
					{
						"name": "Flavor Rating",
						"type": "String"
					},
					{
						"name": "Texture Rating",
						"type": "String"
					},
					{
						"name": "Total Rating",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/inputBlob')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SqlTable')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "sqloutput",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "Flavor",
						"type": "varchar"
					},
					{
						"name": "Base Flavor",
						"type": "varchar"
					},
					{
						"name": "Liked",
						"type": "varchar"
					},
					{
						"name": "Flavor Rating",
						"type": "decimal",
						"precision": 3,
						"scale": 1
					},
					{
						"name": "Texture Rating",
						"type": "decimal",
						"precision": 3,
						"scale": 1
					},
					{
						"name": "Total Rating",
						"type": "decimal",
						"precision": 4,
						"scale": 1
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "Ratings"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/sqloutput')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/inputBlob')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('inputBlob_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/sqloutput')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"server": "[parameters('sqloutput_properties_typeProperties_server')]",
					"database": "[parameters('sqloutput_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('sqloutput_properties_typeProperties_userName')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('sqloutput_password')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}